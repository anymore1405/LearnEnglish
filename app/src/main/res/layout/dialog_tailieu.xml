<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:gravity="center"
    android:layout_height="match_parent">

    <EditText
        android:id="@+id/edt_DongGop_ChuDe"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Nhập tên chủ đề"
        android:inputType="textPersonName"
        android:layout_margin="8dp"
        android:layout_above="@+id/edt_DongGop_NoiDungTiengAnh"
        android:layout_alignParentStart="true" />

    <EditText
        android:id="@+id/edt_DongGop_NoiDungTiengAnh"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Nhập nội dung tiếng Anh"
        android:layout_marginRight="8dp"
        android:layout_marginLeft="8dp"
        android:inputType="textPersonName"
        android:layout_above="@+id/edt_DongGop_BanDichTiengViet"
        android:layout_alignParentStart="true" />

    <EditText
        android:id="@+id/edt_DongGop_BanDichTiengViet"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Nhập bản dịch tiếng Việt"
        android:inputType="textPersonName"
        android:layout_margin="8dp"
        android:layout_above="@+id/btn_DongGop_Ok"
        android:layout_alignParentStart="true" />

    <Button
        android:id="@+id/btn_DongGop_Ok"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/button2"
        android:text="Gửi đóng góp"
        android:layout_marginRight="8dp"
        android:layout_alignBaseline="@+id/btn_DongGop_Huy"
        android:layout_alignBottom="@+id/btn_DongGop_Huy"
        android:layout_alignParentEnd="true" />

    <Button
        android:id="@+id/btn_DongGop_Huy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hủy"
        android:layout_marginLeft="8dp"
        style="@style/button2"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true" />
</RelativeLayout>